  <div id="modalCliente" class="block bg-white invisible fixed -translate-x-2/4 -translate-y-2/4 z-20 top-2/4 left-2/4 p-8 bg-white-500 border border-blue-100 shadow-2xl rounded-2xl max-w-xl mx-auto" role="alert">
    <p class="mt-3 text-lg font-medium sm:mt-0 sm:ml-3">Se encontraron varios resultados</p>
    <p class="mt-4 text-gray-500">Elige uno para continuar</p>
    <div id="modalClienteLista" class="mt-6 flex flex-col gap-2">
      <button id="btn_ninguno" class="flex flex-row justify-between px-12 py-3 text-sm font-medium text-white bg-blue-500 border border-blue-500 rounded active:text-blue-500 hover:bg-transparent hover:text-blue-600 focus:outline-none focus:ring">
        Ninguno de los Anteriores
      </button>
    </div>
  </div>
  {{!-- Parte para doble DNI --}}

<template id="ListButtons">
  <button class="flex flex-row justify-between px-12 py-3 text-sm font-medium text-white bg-blue-500 border border-blue-500 rounded active:text-blue-500 hover:bg-transparent hover:text-blue-600 focus:outline-none focus:ring">
    <span id="clienteId"></span><span id="clienteNombre"></span><span id="clienteTelefono"></span><span id="clienteDomicilio"></span>
  </button>
</template>

<template id="ListButtonsEquipos">
  <button class="flex flex-row justify-between px-12 py-3 text-sm font-medium text-white bg-blue-500 border border-blue-500 rounded active:text-blue-500 hover:bg-transparent hover:text-blue-600 focus:outline-none focus:ring"></button>
</template>

